<div class="panel-heading">
  <div class="row">
    <div class="col col-xs-6">
      <%= link_to 'Add new event', new_event_path, class: 'btn btn-primary btn-create' %>
    </div>
  </div>
</div>
<div class="panel-body">
  <table class="table table-striped table-bordered table-list">
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          Start date
        </th>
        <th>
           Review date
        </th>
        <th>
          End date
        </th>
        <th>
          Tags
        </th>
        <th>
          Completed
        </th>
        <th colspan="3">
          <em class="fa fa-cog"></em>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <%= event.title %>
          </td>
          <td>
            <%= event.start_date %>
          </td>
          <td>
            <%= event.review_date %>
          </td>
          <td>
            <%= event.end_date %>
          </td>
          <td>
            <%= event.tags %>
          </td>
          <td>
            <%= event.completed %>
          </td>
          <td>
            <%= link_to 'Show', event %>
          </td>
          <td>
            <%= link_to 'Edit', edit_event_path(event) %>
          </td>
          <td>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>